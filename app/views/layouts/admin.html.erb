<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin Portal - Mady ProClean" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="admin-layout" data-controller="sidebar">
    <!-- Mobile Overlay -->
    <div class="sidebar-overlay" data-sidebar-target="overlay" data-action="click->sidebar#closeOnOverlay"></div>
    
    <!-- Sidebar -->
    <aside class="admin-sidebar" data-sidebar-target="sidebar">
      <div class="admin-sidebar-header">
        <%= link_to root_path do %>
          <%= image_tag "logo_square.png", alt: "Mady ProClean Logo", class: "admin-sidebar-logo-img", style: "cursor: pointer;" %>
        <% end %>
        <h1 class="admin-sidebar-logo">Mady ProClean</h1>
        <p class="admin-sidebar-subtitle">Portail Admin</p>
      </div>

      <nav class="admin-nav">
        <ul class="admin-nav-list">
          <!-- Dashboard -->
          <li class="admin-nav-item">
            <%= link_to admin_dashboard_path, class: "admin-nav-link #{controller_name == 'dashboard' ? 'active' : ''}" do %>
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
              <span>Tableau de Bord</span>
            <% end %>
          </li>

          <!-- Time Entries -->
          <li class="admin-nav-item">
            <%= link_to admin_time_entries_path, class: "admin-nav-link #{controller_name == 'time_entries' ? 'active' : ''}" do %>
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Pointages</span>
            <% end %>
          </li>

          <!-- Sites -->
          <li class="admin-nav-item">
            <%= link_to admin_sites_path, class: "admin-nav-link #{controller_name == 'sites' ? 'active' : ''}" do %>
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span>Sites</span>
            <% end %>
          </li>

          <!-- Users -->
          <li class="admin-nav-item">
            <%= link_to admin_users_path, class: "admin-nav-link #{controller_name == 'users' ? 'active' : ''}" do %>
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
              <span>Utilisateurs</span>
            <% end %>
          </li>

          <!-- Schedules -->
          <li class="admin-nav-item">
            <%= link_to admin_schedules_path, class: "admin-nav-link #{controller_name == 'schedules' ? 'active' : ''}" do %>
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span>Plannings</span>
            <% end %>
          </li>

          <!-- Absences -->
          <li class="admin-nav-item">
            <%= link_to admin_absences_path, class: "admin-nav-link #{controller_name == 'absences' ? 'active' : ''}" do %>
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
              </svg>
              <span>Absences</span>
            <% end %>
          </li>

          <!-- Anomalies -->
          <li class="admin-nav-item">
            <%= link_to admin_anomalies_path, class: "admin-nav-link #{controller_name == 'anomalies' ? 'active' : ''}" do %>
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
              <span>Anomalies</span>
            <% end %>
          </li>

          <!-- Reports -->
          <li class="admin-nav-item">
            <%= link_to admin_reports_path, class: "admin-nav-link #{controller_name == 'reports' ? 'active' : ''}" do %>
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              <span>Rapports</span>
            <% end %>
            <% if controller_name == 'reports' %>
              <ul class="admin-nav-submenu">
                <li class="admin-nav-item">
                  <%= link_to admin_reports_monthly_path, class: "admin-nav-link" do %>
                    <span>Rapports Mensuels</span>
                  <% end %>
                </li>
                <li class="admin-nav-item">
                  <%= link_to admin_reports_hr_path, class: "admin-nav-link" do %>
                    <span>Rapports RH</span>
                  <% end %>
                </li>
              </ul>
            <% end %>
          </li>
        </ul>
      </nav>
    </aside>

    <!-- Main Wrapper -->
    <div class="admin-main-wrapper">
      <!-- Header -->
      <header class="admin-header">
        <!-- Burger Menu (Mobile Only) -->
        <button class="burger-menu" data-action="click->sidebar#toggle" aria-label="Toggle sidebar">
          <span></span>
          <span></span>
          <span></span>
        </button>
        
        <h2 class="admin-header-title">
          <%= content_for(:page_title) || controller_name.titleize %>
        </h2>
        
        <!-- Profile Dropdown -->
        <%= render 'shared/profile_dropdown' %>
      </header>

      <!-- Main Content -->
      <main class="admin-content">
        <%= yield %>
      </main>

      <!-- Footer -->
      <footer class="admin-footer">
        <p class="admin-footer-text">
          © <%= Time.current.year %> Mady ProClean - Système de Gestion du Temps et des Ressources Humaines
        </p>
        <p class="admin-footer-text">
          Version 1.0.0 | Secteur Nucléaire Industriel
        </p>
        <div class="admin-footer-links">
          <%= link_to "Documentation", "#", class: "admin-footer-link" %>
          <%= link_to "Support", "#", class: "admin-footer-link" %>
          <%= link_to "Politique de Confidentialité", "#", class: "admin-footer-link" %>
          <%= link_to "Déconnexion", logout_path, method: :delete, class: "admin-footer-link" %>
        </div>
      </footer>
    </div>
  </body>
</html>
