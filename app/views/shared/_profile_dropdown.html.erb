<!-- Profile Dropdown -->
<div class="admin-header-user" data-controller="dropdown" style="position: relative; display: flex; align-items: center; gap: 1rem; flex-shrink: 0;">
  <div class="admin-user-info" style="text-align: right;">
    <p class="admin-user-name" style="font-size: 0.875rem; font-weight: 600; color: #FFFFFF; margin: 0;"><%= current_user.first_name %> <%= current_user.last_name %></p>
    <p class="admin-user-role" style="font-size: 0.75rem; color: rgba(255, 255, 255, 0.6); margin: 0;"><%= current_user.role.capitalize %></p>
  </div>
  <button class="admin-user-avatar" data-action="click->dropdown#toggle" aria-label="User menu" style="width: 2.5rem; height: 2.5rem; border-radius: 50%; background: linear-gradient(135deg, #00D4FF, #00FFE0); display: flex; align-items: center; justify-content: center; font-weight: 700; color: #1a1a2e; font-size: 1rem; cursor: pointer; border: 2px solid transparent; transition: all 0.3s ease; border: none;">
    <%= current_user.first_name[0] %><%= current_user.last_name[0] %>
  </button>
  
  <!-- Dropdown Menu -->
  <div class="profile-dropdown hidden" data-dropdown-target="menu" style="position: absolute; top: calc(100% + 0.75rem); right: 0; min-width: 280px; background: rgba(15, 52, 96, 0.95); backdrop-filter: blur(10px); border: 1px solid rgba(0, 212, 255, 0.2); border-radius: 0.75rem; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5); z-index: 1000;">
    <div class="profile-dropdown-header" style="padding: 1rem 1.25rem;">
      <p class="profile-dropdown-name" style="font-size: 1rem; font-weight: 600; color: #FFFFFF; margin: 0 0 0.25rem 0;"><%= current_user.first_name %> <%= current_user.last_name %></p>
      <p class="profile-dropdown-email" style="font-size: 0.875rem; color: rgba(255, 255, 255, 0.6); margin: 0;"><%= current_user.email %></p>
    </div>
    <div class="profile-dropdown-divider" style="height: 1px; background: rgba(0, 212, 255, 0.2); margin: 0.5rem 0;"></div>
    <nav class="profile-dropdown-nav" style="padding: 0.5rem 0;">
      <%= link_to dashboard_profile_path, class: "profile-dropdown-link", style: "display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1.25rem; color: rgba(255, 255, 255, 0.8); text-decoration: none; transition: all 0.2s ease; font-size: 0.95rem;" do %>
        <svg class="profile-dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        <span>Mon Profil</span>
      <% end %>
      <%= link_to edit_dashboard_password_path, class: "profile-dropdown-link", style: "display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1.25rem; color: rgba(255, 255, 255, 0.8); text-decoration: none; transition: all 0.2s ease; font-size: 0.95rem;" do %>
        <svg class="profile-dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span>Paramètres</span>
      <% end %>
      <%= link_to "#", class: "profile-dropdown-link", style: "display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1.25rem; color: rgba(255, 255, 255, 0.8); text-decoration: none; transition: all 0.2s ease; font-size: 0.95rem;" do %>
        <svg class="profile-dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span>Aide</span>
      <% end %>
    </nav>
    <div class="profile-dropdown-divider" style="height: 1px; background: rgba(0, 212, 255, 0.2); margin: 0.5rem 0;"></div>
    <%= link_to logout_path, data: { turbo_method: :delete }, class: "profile-dropdown-link text-red", style: "display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1.25rem; color: #ef4444; text-decoration: none; transition: all 0.2s ease; font-size: 0.95rem;" do %>
      <svg class="profile-dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
      </svg>
      <span>Déconnexion</span>
    <% end %>
  </div>
</div>
