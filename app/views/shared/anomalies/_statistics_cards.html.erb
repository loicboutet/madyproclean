<!-- Statistics Cards -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-icon stat-icon-primary">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Total Anomalies</p>
      <p class="stat-value"><%= all_anomalies.length %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-warning">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Non Résolues</p>
      <p class="stat-value"><%= all_anomalies.unresolved.count %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-success">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Résolues</p>
      <p class="stat-value"><%= all_anomalies.resolved.count %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-danger">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Haute Sévérité</p>
      <p class="stat-value"><%= all_anomalies.severity_high.count %></p>
    </div>
  </div>
</div>
