<% 
  # Parameters:
  # - anomaly: the AnomalyLog object
  # - users: collection of users
  # - time_entries: collection of time entries
  # - schedules: collection of schedules
  # - form_url: URL for form submission
  # - back_url: URL for back/cancel buttons
%>

<!-- Form -->
<div class="card">
  <!-- Success Message -->
  <% if flash[:notice] %>
    <div class="alert alert-success mb-6">
      <strong>‚úì Succ√®s!</strong> <%= flash[:notice] %>
    </div>
  <% end %>

  <!-- Flash Messages -->
  <% if flash[:alert] %>
    <div class="alert alert-danger mb-6">
      <strong>‚úó Erreur!</strong> <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Validation Errors -->
  <% if anomaly.errors.any? %>
    <div class="alert alert-danger mb-6">
      <h3 class="font-bold mb-2">Erreurs de validation:</h3>
      <ul class="list-disc pl-5">
        <% anomaly.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless flash[:notice] %>
    <div class="alert alert-warning mb-6">
      <strong>Attention:</strong> Cette modification permettra de corriger les informations de l'anomalie d√©tect√©e.
    </div>
  <% end %>

  <%= form_with model: anomaly, url: form_url, method: :patch, local: true do |form| %>
    
    <!-- Type & Severity -->
    <div class="form-grid">
      <div class="form-group">
        <label for="anomaly_log_anomaly_type">Type d'Anomalie <span class="text-danger">*</span></label>
        <%= form.select :anomaly_type, 
          options_for_select([
            ['üì• Entr√©e manquante', 'missed_clock_in'],
            ['üì§ Sortie manquante', 'missed_clock_out'],
            ['‚è±Ô∏è Plus de 24h', 'over_24h'],
            ['üîÑ Pointages multiples', 'multiple_active'],
            ['üìÖ D√©saccord horaire', 'schedule_mismatch']
          ], anomaly.anomaly_type),
          { prompt: '-- S√©lectionner un type --' },
          { required: true, class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Type de l'anomalie d√©tect√©e</small>
      </div>

      <div class="form-group">
        <label for="anomaly_log_severity">Niveau de S√©v√©rit√© <span class="text-danger">*</span></label>
        <%= form.select :severity,
          options_for_select([
            ['üîµ Faible', 'low'],
            ['üü° Moyenne', 'medium'],
            ['üî¥ Haute', 'high']
          ], anomaly.severity),
          { prompt: '-- S√©lectionner une s√©v√©rit√© --' },
          { required: true, class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Niveau d'importance de l'anomalie</small>
      </div>
    </div>

    <!-- Description -->
    <div class="divider"></div>
    <h2 class="mb-4">
      <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Description de l'Anomalie
    </h2>

    <div class="form-group">
      <label for="anomaly_log_description">Description <span class="text-danger">*</span></label>
      <%= form.text_area :description, 
        rows: 4, 
        required: true,
        placeholder: "D√©crivez l'anomalie en d√©tail...",
        class: 'form-control'
      %>
      <small class="text-sm opacity-70">Description compl√®te de l'anomalie</small>
    </div>

    <!-- Related Entities -->
    <div class="divider"></div>
    <h2 class="mb-4">
      <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
      </svg>
      Entit√©s Li√©es
    </h2>

    <div class="form-grid">
      <div class="form-group">
        <label for="anomaly_log_user_id">Agent Concern√©</label>
        <%= form.select :user_id,
          options_from_collection_for_select(users, :id, 
            ->(u) { "#{u.full_name} (#{u.employee_number})" }, 
            anomaly.user_id),
          { include_blank: '-- Aucun agent --' },
          { class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Agent li√© √† cette anomalie (optionnel)</small>
      </div>

      <div class="form-group">
        <label for="anomaly_log_time_entry_id">Pointage Li√©</label>
        <%= form.select :time_entry_id,
          options_from_collection_for_select(time_entries, :id,
            ->(te) { "##{te.id} - #{te.user&.full_name} @ #{te.site&.name} (#{te.clocked_in_at.strftime('%d/%m/%Y %H:%M')})" },
            anomaly.time_entry_id),
          { include_blank: '-- Aucun pointage --' },
          { class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Pointage associ√© √† cette anomalie (optionnel)</small>
      </div>

      <div class="form-group">
        <label for="anomaly_log_schedule_id">Horaire Planifi√© Li√©</label>
        <%= form.select :schedule_id,
          options_from_collection_for_select(schedules, :id,
            ->(s) { "##{s.id} - #{s.user&.full_name} @ #{s.site&.name} (#{s.scheduled_date.strftime('%d/%m/%Y')})" },
            anomaly.schedule_id),
          { include_blank: '-- Aucun horaire --' },
          { class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Horaire planifi√© associ√© √† cette anomalie (optionnel)</small>
      </div>
    </div>

    <!-- Current Status Info -->
    <% if anomaly.resolved %>
      <div class="divider"></div>
      <div class="alert alert-info">
        <h3 class="font-bold mb-2">Information de R√©solution</h3>
        <p><strong>Statut:</strong> ‚úì R√©solue</p>
        <% if anomaly.resolved_by %>
          <p><strong>R√©solue par:</strong> <%= anomaly.resolved_by.full_name %></p>
        <% end %>
        <% if anomaly.resolved_at %>
          <p><strong>Date:</strong> <%= anomaly.resolved_at.strftime('%d/%m/%Y √† %H:%M') %></p>
        <% end %>
        <% if anomaly.resolution_notes.present? %>
          <p><strong>Notes:</strong> <%= anomaly.resolution_notes %></p>
        <% end %>
        <p class="text-sm opacity-70 mt-2">Note: La modification de cette anomalie ne changera pas son statut de r√©solution.</p>
      </div>
    <% end %>

    <!-- Actions -->
    <div class="divider"></div>
    <div class="alert alert-success mb-6">
      <strong>Important:</strong> Les modifications seront enregistr√©es avec votre identifiant et l'heure actuelle.
    </div>

    <div class="button-group">
      <button type="submit" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Enregistrer les modifications
      </button>
      
      <%= link_to back_url, class: "btn-secondary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
        Annuler
      <% end %>
    </div>
  <% end %>
</div>
