<% 
  # Parameters:
  # - anomaly: the AnomalyLog object
  # - users: collection of users
  # - time_entries: collection of time entries
  # - schedules: collection of schedules
  # - form_url: URL for form submission
  # - back_url: URL for back/cancel buttons
%>

<!-- Form -->
<div class="card">
  <!-- Success Message -->
  <% if flash[:notice] %>
    <div class="alert alert-success mb-6">
      <strong>‚úì Succ√®s!</strong> <%= flash[:notice] %>
    </div>
  <% end %>

  <!-- Flash Messages -->
  <% if flash[:alert] %>
    <div class="alert alert-danger mb-6">
      <strong>‚úó Erreur!</strong> <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Validation Errors -->
  <% if anomaly.errors.any? %>
    <div class="alert alert-danger mb-6">
      <h3 class="font-bold mb-2">Erreurs de validation:</h3>
      <ul class="list-disc pl-5">
        <% anomaly.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless flash[:notice] %>
    <div class="alert alert-warning mb-6">
      <strong>Attention:</strong> Cette modification permettra de corriger les informations de l'anomalie d√©tect√©e.
    </div>
  <% end %>

  <%= form_with model: anomaly, url: form_url, method: :patch, local: true do |form| %>
    
    <!-- Type & Severity -->
    <div class="form-grid">
      <div class="form-group">
        <label for="anomaly_log_anomaly_type">Type d'Anomalie <span class="text-danger">*</span></label>
        <%= form.select :anomaly_type, 
          options_for_select([
            ['üì• Entr√©e manquante', 'missed_clock_in'],
            ['üì§ Sortie manquante', 'missed_clock_out'],
            ['‚è±Ô∏è Plus de 24h', 'over_24h'],
            ['üîÑ Pointages multiples', 'multiple_active'],
            ['üìÖ D√©saccord horaire', 'schedule_mismatch']
          ], anomaly.anomaly_type),
          { prompt: '-- S√©lectionner un type --' },
          { required: true, class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Type de l'anomalie d√©tect√©e</small>
      </div>

      <div class="form-group">
        <label for="anomaly_log_severity">Niveau de S√©v√©rit√© <span class="text-danger">*</span></label>
        <%= form.select :severity,
          options_for_select([
            ['üîµ Faible', 'low'],
            ['üü° Moyenne', 'medium'],
            ['üî¥ Haute', 'high']
          ], anomaly.severity),
          { prompt: '-- S√©lectionner une s√©v√©rit√© --' },
          { required: true, class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Niveau d'importance de l'anomalie</small>
      </div>
    </div>

    <!-- Description -->
    <div class="divider"></div>
    <h2 class="mb-4">
      <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Description de l'Anomalie
    </h2>

    <div class="form-group">
      <label for="anomaly_log_description">Description <span class="text-danger">*</span></label>
      <%= form.text_area :description, 
        rows: 4, 
        required: true,
        placeholder: "D√©crivez l'anomalie en d√©tail...",
        class: 'form-control'
      %>
      <small class="text-sm opacity-70">Description compl√®te de l'anomalie</small>
    </div>

    <!-- Related Entities -->
    <div class="divider"></div>
    <h2 class="mb-4">
      <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
      </svg>
      Entit√©s Li√©es
    </h2>

    <div class="form-grid">
      <div class="form-group">
        <label for="anomaly_log_user_id">Agent Concern√©</label>
        <%= form.select :user_id,
          options_from_collection_for_select(users, :id, 
            ->(u) { "#{u.full_name} (#{u.employee_number})" }, 
            anomaly.user_id),
          { include_blank: '-- Aucun agent --' },
          { class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Agent li√© √† cette anomalie (optionnel)</small>
      </div>

      <div class="form-group">
        <label for="anomaly_log_time_entry_id">Pointage Li√©</label>
        <%= form.select :time_entry_id,
          options_from_collection_for_select(time_entries, :id,
            ->(te) { "##{te.id} - #{te.user&.full_name} @ #{te.site&.name} (#{te.clocked_in_at.strftime('%d/%m/%Y %H:%M')})" },
            anomaly.time_entry_id),
          { include_blank: '-- Aucun pointage --' },
          { class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Pointage associ√© √† cette anomalie (optionnel)</small>
      </div>

      <div class="form-group">
        <label for="anomaly_log_schedule_id">Horaire Planifi√© Li√©</label>
        <%= form.select :schedule_id,
          options_from_collection_for_select(schedules, :id,
            ->(s) { "##{s.id} - #{s.user&.full_name} @ #{s.site&.name} (#{s.scheduled_date.strftime('%d/%m/%Y')})" },
            anomaly.schedule_id),
          { include_blank: '-- Aucun horaire --' },
          { class: 'form-control' }
        %>
        <small class="text-sm opacity-70">Horaire planifi√© associ√© √† cette anomalie (optionnel)</small>
      </div>
    </div>

    <!-- Resolution Status -->
    <div class="divider"></div>
    <h2 class="mb-4">
      <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Statut de R√©solution
    </h2>

    <div class="form-group mb-4">
      <label class="flex items-center cursor-pointer">
        <%= form.check_box :resolved, class: 'mr-3 h-5 w-5' %>
        <span class="font-semibold">Marquer cette anomalie comme r√©solue</span>
      </label>
      <small class="text-sm opacity-70 block mt-2">Cochez cette case pour marquer l'anomalie comme r√©solue. Elle ne n√©cessitera plus d'action.</small>
    </div>

    <div class="form-group">
      <label for="anomaly_log_resolution_notes">Notes de R√©solution</label>
      <%= form.text_area :resolution_notes, 
        rows: 4,
        placeholder: "Expliquez comment l'anomalie a √©t√© r√©solue ou les actions prises...",
        class: 'form-control'
      %>
      <small class="text-sm opacity-70">Ajoutez des notes pour documenter la r√©solution de cette anomalie (optionnel)</small>
    </div>

    <!-- Time Entry Correction (for over_24h anomalies) -->
    <% if anomaly.anomaly_type == 'over_24h' && anomaly.time_entry.present? %>
      <div class="divider"></div>
      <h2 class="mb-4">
        <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Correction du Pointage
      </h2>

      <div class="alert alert-warning mb-6">
        <strong>‚è±Ô∏è Anomalie d√©tect√©e:</strong> Ce pointage est actif depuis plus de 24 heures. Utilisez les champs ci-dessous pour corriger les heures d'entr√©e/sortie.
      </div>

      <!-- Current Time Entry Info -->
      <div class="glass-card mb-6">
        <div class="flex items-center justify-between mb-3">
          <h3 class="font-bold">Informations actuelles du pointage</h3>
          <%= link_to admin_time_entry_path(anomaly.time_entry), class: "btn-secondary text-sm", target: "_blank" do %>
            <svg class="btn-icon w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            Voir le pointage
          <% end %>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm opacity-70">ID du Pointage:</p>
            <p class="font-semibold">#<%= anomaly.time_entry.id %></p>
          </div>
          <div>
            <p class="text-sm opacity-70">Agent:</p>
            <p class="font-semibold"><%= anomaly.time_entry.user&.full_name || 'N/A' %></p>
          </div>
          <div>
            <p class="text-sm opacity-70">Site:</p>
            <p class="font-semibold"><%= anomaly.time_entry.site&.name || 'N/A' %></p>
          </div>
          <div>
            <p class="text-sm opacity-70">Entr√©e enregistr√©e:</p>
            <p class="font-semibold"><%= anomaly.time_entry.clocked_in_at&.strftime('%d/%m/%Y √† %H:%M') || 'N/A' %></p>
          </div>
          <div>
            <p class="text-sm opacity-70">Sortie enregistr√©e:</p>
            <p class="font-semibold"><%= anomaly.time_entry.clocked_out_at&.strftime('%d/%m/%Y √† %H:%M') || '‚ùå Non enregistr√©e' %></p>
          </div>
          <div>
            <p class="text-sm opacity-70">Statut:</p>
            <p class="font-semibold"><%= anomaly.time_entry.status&.titleize || 'N/A' %></p>
          </div>
          <% if anomaly.time_entry.duration_minutes %>
            <div>
              <p class="text-sm opacity-70">Dur√©e:</p>
              <p class="font-semibold"><%= (anomaly.time_entry.duration_minutes / 60.0).round(2) %> heures</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Correction Fields -->
      <%= form.fields_for :time_entry_correction do |te_form| %>
        <div class="form-group mb-4">
          <label>
            <%= te_form.check_box :apply_correction, class: 'mr-2' %>
            <strong>Appliquer les corrections au pointage</strong>
          </label>
          <small class="text-sm opacity-70 block ml-6">Cochez cette case pour enregistrer les corrections ci-dessous dans le pointage</small>
        </div>

        <h3 class="font-semibold mb-3">Heure d'Entr√©e Corrig√©e</h3>
        <div class="form-grid mb-4">
          <div class="form-group">
            <label for="time_entry_correction_clocked_in_date">Date d'entr√©e</label>
            <input 
              type="date" 
              name="anomaly_log[time_entry_correction][clocked_in_date]" 
              id="time_entry_correction_clocked_in_date" 
              value="<%= anomaly.time_entry.clocked_in_at&.strftime('%Y-%m-%d') %>">
            <small class="text-sm opacity-70">Modifier si la date d'entr√©e est incorrecte</small>
          </div>

          <div class="form-group">
            <label for="time_entry_correction_clocked_in_time">Heure d'entr√©e</label>
            <input 
              type="time" 
              name="anomaly_log[time_entry_correction][clocked_in_time]" 
              id="time_entry_correction_clocked_in_time" 
              value="<%= anomaly.time_entry.clocked_in_at&.strftime('%H:%M') %>">
            <small class="text-sm opacity-70">Modifier si l'heure d'entr√©e est incorrecte</small>
          </div>
        </div>

        <h3 class="font-semibold mb-3">Heure de Sortie Corrig√©e</h3>
        <div class="form-grid mb-4">
          <div class="form-group">
            <label for="time_entry_correction_clocked_out_date">Date de sortie</label>
            <input 
              type="date" 
              name="anomaly_log[time_entry_correction][clocked_out_date]" 
              id="time_entry_correction_clocked_out_date" 
              value="<%= anomaly.time_entry.clocked_out_at&.strftime('%Y-%m-%d') %>">
            <small class="text-sm opacity-70">Saisissez la date de sortie correcte</small>
          </div>

          <div class="form-group">
            <label for="time_entry_correction_clocked_out_time">Heure de sortie</label>
            <input 
              type="time" 
              name="anomaly_log[time_entry_correction][clocked_out_time]" 
              id="time_entry_correction_clocked_out_time" 
              value="<%= anomaly.time_entry.clocked_out_at&.strftime('%H:%M') %>">
            <small class="text-sm opacity-70">Saisissez l'heure de sortie correcte</small>
          </div>
        </div>

        <div class="form-group">
          <label for="time_entry_correction_notes">Notes de Correction</label>
          <%= te_form.text_area :notes,
            rows: 3,
            placeholder: "Expliquez pourquoi cette correction est n√©cessaire...",
            class: 'form-control'
          %>
          <small class="text-sm opacity-70">Documentation de la correction pour l'audit</small>
        </div>
      <% end %>
    <% end %>

    <!-- Current Status Info -->
    <% if anomaly.resolved %>
      <div class="divider"></div>
      <div class="alert alert-info">
        <h3 class="font-bold mb-2">Information de R√©solution</h3>
        <p><strong>Statut:</strong> ‚úì R√©solue</p>
        <% if anomaly.resolved_by %>
          <p><strong>R√©solue par:</strong> <%= anomaly.resolved_by.full_name %></p>
        <% end %>
        <% if anomaly.resolved_at %>
          <p><strong>Date:</strong> <%= anomaly.resolved_at.strftime('%d/%m/%Y √† %H:%M') %></p>
        <% end %>
        <% if anomaly.resolution_notes.present? %>
          <p><strong>Notes:</strong> <%= anomaly.resolution_notes %></p>
        <% end %>
        <p class="text-sm opacity-70 mt-2">Note: La modification de cette anomalie ne changera pas son statut de r√©solution.</p>
      </div>
    <% end %>

    <!-- Actions -->
    <div class="divider"></div>
    <div class="alert alert-success mb-6">
      <strong>Important:</strong> Les modifications seront enregistr√©es avec votre identifiant et l'heure actuelle.
    </div>

    <div class="button-group">
      <button type="submit" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Enregistrer les modifications
      </button>
      
      <%= link_to back_url, class: "btn-secondary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
        Annuler
      <% end %>
    </div>
  <% end %>
</div>
