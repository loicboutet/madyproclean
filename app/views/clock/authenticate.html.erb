<div class="container">
  <div class="icon">ğŸ”</div>
  <h2 style="margin-bottom: 30px; color: #1f2937; font-size: 1.5rem;">Authentification</h2>
  
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <%= form_with url: clock_verify_path, method: :post, local: true do |f| %>
    <%= hidden_field_tag :qr_code_token, @qr_code_token %>
    
    <div class="form-group">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="form-group">
      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password, required: true, autocomplete: "current-password" %>
    </div>
    
    <%= f.submit "Se connecter", class: "btn btn-primary" %>
  <% end %>
</div>
