<div class="container">
  <h2 style="font-size: 1.5rem; margin-bottom: 1.5rem; color: #1f2937;"><%= @site.name %></h2>
  
  <% if @can_clock_in %>
    <div class="icon">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 3.5rem; height: 3.5rem; margin: 0 auto;">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
      </svg>
    </div>
    <%= form_with url: clock_in_path(qr_code_token: params[:qr_code_token]), method: :post, local: true do |f| %>
      <%= f.button type: 'submit', class: "btn btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
        </svg>
        Pointer l'entrée
      <% end %>
    <% end %>
  <% elsif @can_clock_out %>
    <div class="icon">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 3.5rem; height: 3.5rem; margin: 0 auto;">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
      </svg>
    </div>
    <%= form_with url: clock_out_path(qr_code_token: params[:qr_code_token]), method: :post, local: true do |f| %>
      <%= f.button type: 'submit', class: "btn btn-success" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        Pointer la sortie
      <% end %>
    <% end %>
  <% else %>
    <div class="icon">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 3.5rem; height: 3.5rem; margin: 0 auto; color: #f59e0b;">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
    </div>
    <div class="message warning">
      Vous êtes déjà pointé sur un autre site.
    </div>
    <p style="margin-top: 1.5rem; color: rgba(107, 114, 128, 0.8); font-size: 0.95rem;">
      Veuillez d'abord pointer la sortie avant de pointer sur ce site.
    </p>
  <% end %>
</div>
