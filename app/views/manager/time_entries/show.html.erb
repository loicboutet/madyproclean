<% content_for :page_title, "Détails du Pointage ##{@time_entry[:id]}" %>

<!-- Page Header -->
<div class="glass-card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="gradient-heading">Détails du Pointage #<%= @time_entry[:id] %></h1>
      <p class="text-large mt-2">Informations complètes de ce pointage</p>
    </div>
    <div class="button-group">
      <%= link_to manager_time_entries_path, class: "btn-secondary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Retour à la liste
      <% end %>
    </div>
  </div>
</div>

<div class="divider"></div>

<!-- Status Card -->
<div class="card">
  <div class="flex items-center justify-between mb-6">
    <h2 style="font-size: 1.875rem;">Statut du Pointage</h2>
    <% if @time_entry[:status] == 'active' %>
      <span class="badge-info" style="font-size: 1.125rem; padding: 0.75rem 1.5rem;">⚡ En cours</span>
    <% elsif @time_entry[:status] == 'completed' %>
      <span class="badge-success" style="font-size: 1.125rem; padding: 0.75rem 1.5rem;">✓ Complété</span>
    <% elsif @time_entry[:status] == 'anomaly' %>
      <span class="badge-warning" style="font-size: 1.125rem; padding: 0.75rem 1.5rem;">⚠ Anomalie</span>
    <% end %>
  </div>

  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon stat-icon-primary">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
      <div class="stat-content">
        <p class="stat-label">Date du Pointage</p>
        <p class="stat-value" style="font-size: 1.5rem;"><%= @time_entry[:clocked_in_at].strftime('%d/%m/%Y') %></p>
        <p class="text-sm opacity-70 mt-1"><%= l(@time_entry[:clocked_in_at].to_date, format: '%A') %></p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon stat-icon-info">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="stat-content">
        <p class="stat-label">Durée de Travail</p>
        <% if @time_entry[:duration_minutes] %>
          <p class="stat-value" style="font-size: 1.5rem;"><%= (@time_entry[:duration_minutes] / 60.0).round(1) %> heures</p>
          <p class="text-sm opacity-70 mt-1"><%= @time_entry[:duration_minutes] %> minutes</p>
        <% else %>
          <p class="stat-value" style="font-size: 1.5rem;">—</p>
          <p class="text-sm opacity-70 mt-1">En cours</p>
        <% end %>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon stat-icon-success">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
      </div>
      <div class="stat-content">
        <p class="stat-label">Agent</p>
        <p class="stat-value" style="font-size: 1.25rem;"><%= @time_entry[:user_name] %></p>
        <p class="text-sm opacity-70 mt-1"><%= @time_entry[:employee_number] %></p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon stat-icon-warning">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
      <div class="stat-content">
        <p class="stat-label">Site de Travail</p>
        <p class="stat-value" style="font-size: 1.25rem;"><%= @time_entry[:site_name] %></p>
        <p class="text-sm opacity-70 mt-1"><span class="badge"><%= @time_entry[:site_code] %></span></p>
      </div>
    </div>
  </div>
</div>

<div class="divider"></div>

<!-- Time Entry Details -->
<div class="card">
  <h2 class="mb-6" style="font-size: 1.875rem;">
    <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
    Informations Détaillées
  </h2>

  <div class="form-grid">
    <div class="form-group">
      <label>ID du Pointage</label>
      <div class="">
        <p class="font-semibold text-lg">#<%= @time_entry[:id] %></p>
      </div>
    </div>

    <div class="form-group">
      <label>Statut</label>
      <div class="">
        <% if @time_entry[:status] == 'active' %>
          <span class="badge-info">⚡ En cours</span>
        <% elsif @time_entry[:status] == 'completed' %>
          <span class="badge-success">✓ Complété</span>
        <% elsif @time_entry[:status] == 'anomaly' %>
          <span class="badge-warning">⚠ Anomalie</span>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label>Agent</label>
      <div class="">
        <p class="font-semibold"><%= @time_entry[:user_name] %></p>
        <p class="text-sm opacity-70"><%= @time_entry[:employee_number] %></p>
      </div>
    </div>

    <div class="form-group">
      <label>Site</label>
      <div class="">
        <p class="font-semibold"><%= @time_entry[:site_name] %></p>
        <p class="text-sm opacity-70"><span class="badge"><%= @time_entry[:site_code] %></span></p>
      </div>
    </div>

    <div class="form-group">
      <label>Heure d'Entrée (Pointage In)</label>
      <div class="">
        <p class="font-semibold"><%= @time_entry[:clocked_in_at].strftime('%d/%m/%Y à %H:%M:%S') %></p>
        <p class="text-sm opacity-70">Début de la journée de travail</p>
      </div>
    </div>

    <div class="form-group">
      <label>Heure de Sortie (Pointage Out)</label>
      <div class="">
        <% if @time_entry[:clocked_out_at] %>
          <p class="font-semibold"><%= @time_entry[:clocked_out_at].strftime('%d/%m/%Y à %H:%M:%S') %></p>
          <p class="text-sm opacity-70">Fin de la journée de travail</p>
        <% else %>
          <span class="badge-info">En cours - Pas encore pointé</span>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label>Durée Totale</label>
      <div class="">
        <% if @time_entry[:duration_minutes] %>
          <p class="font-semibold"><%= (@time_entry[:duration_minutes] / 60.0).round(1) %> heures</p>
          <p class="text-sm opacity-70"><%= @time_entry[:duration_minutes] %> minutes de travail</p>
        <% else %>
          <p class="text-sm opacity-70">Calcul en attente de pointage sortie</p>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label>Date de Création</label>
      <div class="">
        <p class="font-semibold"><%= @time_entry[:created_at].strftime('%d/%m/%Y à %H:%M') %></p>
      </div>
    </div>
  </div>
</div>

<div class="divider"></div>

<!-- Technical Information -->
<div class="card">
  <h2 class="mb-6" style="font-size: 1.875rem;">
    <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
    </svg>
    Informations Techniques
  </h2>

  <div class="form-grid">
    <div class="form-group">
      <label>Adresse IP (Entrée)</label>
      <div class="">
        <p class="font-semibold"><%= @time_entry[:ip_address_in] || 'Non disponible' %></p>
        <p class="text-sm opacity-70">Adresse IP lors du pointage d'entrée</p>
      </div>
    </div>

    <div class="form-group">
      <label>Adresse IP (Sortie)</label>
      <div class="">
        <% if @time_entry[:ip_address_out] %>
          <p class="font-semibold"><%= @time_entry[:ip_address_out] %></p>
          <p class="text-sm opacity-70">Adresse IP lors du pointage de sortie</p>
        <% else %>
          <span class="text-sm opacity-50">En attente de pointage sortie</span>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label>Agent Utilisateur (Entrée)</label>
      <div class="">
        <p class="text-sm font-mono"><%= @time_entry[:user_agent_in] || 'Non disponible' %></p>
        <p class="text-sm opacity-70">Appareil utilisé pour pointer l'entrée</p>
      </div>
    </div>

    <div class="form-group">
      <label>Agent Utilisateur (Sortie)</label>
      <div class="">
        <% if @time_entry[:user_agent_out] %>
          <p class="text-sm font-mono"><%= @time_entry[:user_agent_out] %></p>
          <p class="text-sm opacity-70">Appareil utilisé pour pointer la sortie</p>
        <% else %>
          <span class="text-sm opacity-50">En attente de pointage sortie</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @time_entry[:manually_corrected] %>
  <div class="divider"></div>

  <!-- Correction Information -->
  <div class="card" style="border-left: 4px solid #f59e0b;">
    <h2 class="mb-6" style="font-size: 1.875rem;">
      <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Informations de Correction
    </h2>

    <div class="alert alert-warning mb-6">
      <strong>⚠ Attention:</strong> Ce pointage a fait l'objet d'une correction manuelle par un administrateur
    </div>

    <div class="form-grid">
      <div class="form-group">
        <label>Corrigé par</label>
        <div class="">
          <p class="font-semibold"><%= @time_entry[:corrected_by_name] || 'Administrateur' %></p>
          <p class="text-sm opacity-70">Administrateur ayant effectué la correction</p>
        </div>
      </div>

      <div class="form-group">
        <label>Date de Correction</label>
        <div class="">
          <% if @time_entry[:corrected_at] %>
            <p class="font-semibold"><%= @time_entry[:corrected_at].strftime('%d/%m/%Y à %H:%M') %></p>
          <% else %>
            <span class="text-sm opacity-50">—</span>
          <% end %>
        </div>
      </div>
    </div>

    <% if @time_entry[:notes].present? %>
      <div class="divider"></div>
      <div class="form-group">
        <label>Notes de Correction</label>
        <div class="p-4 bg-orange-50 rounded-lg border border-orange-200">
          <p class="text-base"><%= @time_entry[:notes] %></p>
        </div>
      </div>
    <% end %>
  </div>
<% elsif @time_entry[:notes].present? %>
  <div class="divider"></div>

  <!-- Notes -->
  <div class="card">
    <h2 class="mb-6" style="font-size: 1.875rem;">
      <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
      </svg>
      Notes / Observations
    </h2>
    
    <div class="p-4 rounded-lg border border-blue-200">
      <p class="text-base"><%= @time_entry[:notes] %></p>
    </div>
  </div>
<% end %>

<div class="divider"></div>

<!-- Actions -->
<div class="glass-card">
  <h2 class="mb-4" style="font-size: 1.875rem;">Actions</h2>
  
  <div class="alert alert-info mb-6">
    <strong>Information:</strong> En tant que manager, vous pouvez consulter les détails des pointages mais ne pouvez pas les modifier. Pour toute correction nécessaire, veuillez contacter un administrateur.
  </div>
  
  <div class="button-group">
    <%= link_to manager_time_entries_path, class: "btn-secondary" do %>
      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Retour à la liste
    <% end %>
  </div>
</div>
