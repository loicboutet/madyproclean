<% content_for :page_title, "Gestion des Utilisateurs" %>

<!-- Page Header -->
<div class="glass-card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="gradient-heading">Gestion des Utilisateurs</h1>
      <p class="text-large mt-2">Gérez tous les utilisateurs du système</p>
    </div>
    <div class="button-group">
      <%= link_to new_admin_user_path, class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Créer un utilisateur
      <% end %>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon stat-icon-primary">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
      </div>
      <div class="stat-content">
        <p class="stat-label">Total Utilisateurs</p>
        <p class="stat-value"><%= @all_users.length %></p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon stat-icon-success">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="stat-content">
        <p class="stat-label">Utilisateurs Actifs</p>
        <p class="stat-value"><%= @all_users.count { |u| u[:active] == true } %></p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon stat-icon-info">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
      </div>
      <div class="stat-content">
        <p class="stat-label">Agents Terrain</p>
        <p class="stat-value"><%= @all_users.count { |u| u[:role] == 'agent' && u[:active] } %></p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon stat-icon-warning">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
      </div>
      <div class="stat-content">
        <p class="stat-label">Résultats</p>
        <p class="stat-value"><%= @users.length %></p>
      </div>
    </div>
  </div>

  <div class="divider"></div>

  <!-- Filters Section -->
  <div class="alert alert-info mb-6">
    <strong>Filtres de Recherche:</strong> Utilisez les filtres ci-dessous pour affiner la liste des utilisateurs
  </div>

  <form>
    <div class="form-grid">
      <div class="form-group">
        <label for="search">Rechercher</label>
        <input 
          type="text" 
          name="search" 
          id="search" 
          placeholder="Nom, email ou matricule..."
          value="<%= params[:search] %>">
      </div>

      <div class="form-group">
        <label for="role">Rôle</label>
        <select name="role" id="role">
          <option value="all" <%= 'selected' if params[:role].blank? || params[:role] == 'all' %>>Tous les rôles</option>
          <option value="admin" <%= 'selected' if params[:role] == 'admin' %>>Administrateurs</option>
          <option value="manager" <%= 'selected' if params[:role] == 'manager' %>>Managers</option>
          <option value="agent" <%= 'selected' if params[:role] == 'agent' %>>Agents</option>
        </select>
      </div>

      <div class="form-group">
        <label for="status">Statut</label>
        <select name="status" id="status">
          <option value="">Tous les statuts</option>
          <option value="active" <%= 'selected' if params[:status] == 'active' %>>Actifs</option>
          <option value="inactive" <%= 'selected' if params[:status] == 'inactive' %>>Inactifs</option>
        </select>
      </div>
    </div>

    <div class="button-group">
      <button type="submit" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
        </svg>
        Appliquer les filtres
      </button>
      <a href="<%= admin_users_path %>" class="btn-secondary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Réinitialiser
      </a>
    </div>
  </form>
</div>

<div class="divider"></div>

<!-- Users Table -->
<div class="card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h2 class="mb-2" style="font-size: 1.875rem;">Liste des Utilisateurs</h2>
      <p class="text-large">Visualisez tous les utilisateurs avec leurs rôles et détails</p>
    </div>
    <div class="button-group">
      <%= link_to new_admin_user_path, class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Créer un utilisateur
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nom Complet</th>
          <th>Email</th>
          <th>Matricule</th>
          <th>Rôle</th>
          <th>Manager</th>
          <th>Statut</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @users.empty? %>
          <tr>
            <td colspan="8" style="text-align: center; padding: 2rem;">
              <div class="alert alert-warning" style="display: inline-block;">
                <strong>Aucun utilisateur trouvé</strong> avec les filtres actuels
              </div>
            </td>
          </tr>
        <% else %>
          <% @users.each do |user| %>
            <% 
              manager = @all_users.find { |u| u[:id] == user[:manager_id] } if user[:manager_id]
              role_badge_class = case user[:role]
                when 'admin' then 'badge-danger'
                when 'manager' then 'badge-warning'
                when 'agent' then 'badge-info'
                else 'badge'
              end
            %>
            <tr>
              <td><strong>#<%= user[:id] %></strong></td>
              <td>
                <div>
                  <p class="font-semibold"><%= user[:first_name] %> <%= user[:last_name] %></p>
                  <% if user[:phone_number].present? %>
                    <p class="text-sm opacity-70"><%= user[:phone_number] %></p>
                  <% end %>
                </div>
              </td>
              <td>
                <p class="text-sm"><%= user[:email] %></p>
              </td>
              <td>
                <% if user[:employee_number].present? %>
                  <span class="badge"><%= user[:employee_number] %></span>
                <% else %>
                  <span class="text-sm opacity-50">—</span>
                <% end %>
              </td>
              <td>
                <span class="<%= role_badge_class %>">
                  <%= user[:role].capitalize %>
                </span>
              </td>
              <td>
                <% if manager %>
                  <p class="text-sm"><%= manager[:first_name] %> <%= manager[:last_name] %></p>
                <% else %>
                  <span class="text-sm opacity-50">—</span>
                <% end %>
              </td>
              <td>
                <% if user[:active] %>
                  <span class="badge-success">✓ Actif</span>
                <% else %>
                  <span class="badge-warning">✗ Inactif</span>
                <% end %>
              </td>
              <td>
                <div class="dropdown-wrapper" data-controller="dropdown">
                  <button class="dropdown-trigger" data-action="click->dropdown#toggle" title="Actions">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                    </svg>
                  </button>
                  
                  <div class="dropdown-menu hidden" data-dropdown-target="menu">
                    <%= link_to admin_user_path(user[:id]), class: "dropdown-item" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      <span>Voir</span>
                    <% end %>
                    <%= link_to edit_admin_user_path(user[:id]), class: "dropdown-item" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                      <span>Modifier</span>
                    <% end %>
                    <div class="dropdown-divider"></div>
                    <%= button_to admin_user_path(user[:id]), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir désactiver cet utilisateur ?' }, class: "dropdown-item dropdown-item-danger", form: { style: 'display: inline;' } do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                      </svg>
                      <span>Désactiver</span>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <%= render 'shared/pagination' %>
</div>

<div class="divider"></div>

<!-- Add New User -->
<div class="glass-card">
  <h2 class="mb-4" style="font-size: 1.875rem;">Ajouter un Nouvel Utilisateur</h2>
  <div class="alert alert-info mb-6">
    <strong>Information:</strong> Créez des comptes pour les administrateurs, managers et agents terrain.
  </div>
  
  <div class="button-group">
    <%= link_to new_admin_user_path, class: "btn-primary" do %>
      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Créer un nouvel utilisateur
    <% end %>
  </div>
</div>
