    </div>
    <div class="stat-content">
      <p class="stat-label">Haute S√©v√©rit√©</p>
      <p class="stat-value"><%= @all_anomalies.severity_high.count %></p>
    </div>
  </div>
</div>

<div class="divider"></div>

  <!-- Filters Section -->
