        <select name="resolved" id="resolved">
          <option value="">Toutes</option>
          <option value="false" <%= 'selected' if params[:resolved] == 'false' %>>Non R√©solues</option>
          <option value="true" <%= 'selected' if params[:resolved] == 'true' %>>R√©solues</option>
        </select>
      </div>

      <div class="form-group">
        <label for="user_id">Agent</label>
        <select name="user_id" id="user_id">
