<% content_for :page_title, "Gestion des Absences" %>

<!-- Page Header -->
<div class="glass-card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="gradient-heading">Gestion des Absences</h1>
      <p class="text-large mt-2">G√©rez les cong√©s et absences des agents</p>
    </div>
    <div class="button-group">
      <%= link_to new_admin_absence_path, class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        D√©clarer une absence
      <% end %>
    </div>
  </div>

<!-- Statistics Cards -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-icon stat-icon-primary">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Total Absences</p>
      <p class="stat-value"><%= @all_absences.length %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-info">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Cong√©s Pay√©s</p>
      <p class="stat-value"><%= @all_absences.count { |a| a[:absence_type] == 'vacation' } %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-warning">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Cong√©s Maladie</p>
      <p class="stat-value"><%= @all_absences.count { |a| a[:absence_type] == 'sick_leave' } %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-success">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Formations</p>
      <p class="stat-value"><%= @all_absences.count { |a| a[:absence_type] == 'training' } %></p>
    </div>
  </div>
</div>

<div class="divider"></div>
  <!-- Filters Section -->
  <div class="alert alert-info mb-6">
    <strong>Filtres de Recherche:</strong> Utilisez les filtres ci-dessous pour affiner la liste des absences
  </div>

  <form>
    <div class="form-grid">
      <div class="form-group">
        <label for="search">Rechercher</label>
        <input 
          type="text" 
          name="search" 
          id="search" 
          placeholder="Agent, raison, notes..."
          value="<%= params[:search] %>">
      </div>

      <div class="form-group">
        <label for="absence_type">Type d'Absence</label>
        <select name="absence_type" id="absence_type">
          <option value="">Tous les types</option>
          <option value="vacation" <%= 'selected' if params[:absence_type] == 'vacation' %>>Cong√©s pay√©s</option>
          <option value="sick_leave" <%= 'selected' if params[:absence_type] == 'sick_leave' %>>Cong√© maladie</option>
          <option value="training" <%= 'selected' if params[:absence_type] == 'training' %>>Formation</option>
          <option value="unpaid_leave" <%= 'selected' if params[:absence_type] == 'unpaid_leave' %>>Cong√© sans solde</option>
          <option value="other" <%= 'selected' if params[:absence_type] == 'other' %>>Autre</option>
        </select>
      </div>

      <div class="form-group">
        <label for="user_id">Agent</label>
        <select name="user_id" id="user_id">
          <option value="">Tous les agents</option>
          <% @demo_users.each do |user| %>
            <option value="<%= user[:id] %>" <%= 'selected' if params[:user_id] == user[:id].to_s %>><%= user[:name] %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="start_date">Date de d√©but</label>
        <input 
          type="date" 
          name="start_date" 
          id="start_date" 
          value="<%= params[:start_date] %>">
      </div>

      <div class="form-group">
        <label for="end_date">Date de fin</label>
        <input 
          type="date" 
          name="end_date" 
          id="end_date" 
          value="<%= params[:end_date] %>">
      </div>
    </div>

    <div class="button-group">
      <button type="submit" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
        </svg>
        Appliquer les filtres
      </button>
      <a href="<%= admin_absences_path %>" class="btn-secondary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        R√©initialiser
      </a>
    </div>
  </form>
</div>

<div class="divider"></div>

<!-- Absences Table -->
<div class="card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h2 class="mb-2" style="font-size: 1.875rem;">Liste des Absences</h2>
      <p class="text-large">Visualisez toutes les absences d√©clar√©es avec leurs d√©tails</p>
    </div>
    <div class="button-group">
      <%= link_to new_admin_absence_path, class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        D√©clarer une absence
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Agent</th>
          <th>Type d'Absence</th>
          <th>P√©riode</th>
          <th>Dur√©e</th>
          <th>Raison</th>
          <th>D√©clar√© par</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @absences.empty? %>
          <tr>
            <td colspan="8" style="text-align: center; padding: 2rem;">
              <div class="alert alert-warning" style="display: inline-block;">
                <strong>Aucune absence trouv√©e</strong> avec les filtres actuels
              </div>
            </td>
          </tr>
        <% else %>
          <% @absences.each do |absence| %>
            <tr>
              <td><strong>#<%= absence[:id] %></strong></td>
              <td>
                <div>
                  <p class="font-semibold"><%= absence[:user_name] %></p>
                  <p class="text-sm opacity-70"><%= absence[:employee_number] %></p>
                </div>
              </td>
              <td>
                <% if absence[:absence_type] == 'vacation' %>
                  <span class="badge-info">üèñÔ∏è Cong√©s pay√©s</span>
                <% elsif absence[:absence_type] == 'sick_leave' %>
                  <span class="badge-warning">üè• Cong√© maladie</span>
                <% elsif absence[:absence_type] == 'training' %>
                  <span class="badge-success">üìö Formation</span>
                <% elsif absence[:absence_type] == 'unpaid_leave' %>
                  <span class="badge-danger">‚è∏Ô∏è Sans solde</span>
                <% else %>
                  <span class="badge">üìã Autre</span>
                <% end %>
              </td>
              <td>
                <div>
                  <p class="font-semibold">Du <%= absence[:start_date].strftime('%d/%m/%Y') %></p>
                  <p class="text-sm opacity-70">Au <%= absence[:end_date].strftime('%d/%m/%Y') %></p>
                </div>
              </td>
              <td>
                <% duration = (absence[:end_date] - absence[:start_date]).to_i + 1 %>
                <span class="badge-info">
                  <%= duration %> jour<%= 's' if duration > 1 %>
                </span>
              </td>
              <td>
                <% if absence[:reason].present? %>
                  <p class="text-sm"><%= truncate(absence[:reason], length: 50) %></p>
                <% else %>
                  <span class="text-sm opacity-50">‚Äî</span>
                <% end %>
              </td>
              <td>
                <div>
                  <p class="text-sm font-semibold"><%= absence[:declared_by_name] %></p>
                  <p class="text-sm opacity-70"><%= absence[:created_at].strftime('%d/%m/%Y') %></p>
                </div>
              </td>
              <td>
                <div class="dropdown-wrapper" data-controller="dropdown">
                  <button class="dropdown-trigger" data-action="click->dropdown#toggle" title="Actions">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                    </svg>
                  </button>
                  
                  <div class="dropdown-menu hidden" data-dropdown-target="menu">
                    <%= link_to admin_absence_path(absence[:id]), class: "dropdown-item" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      <span>Voir</span>
                    <% end %>
                    <%= link_to edit_admin_absence_path(absence[:id]), class: "dropdown-item" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                      <span>Modifier</span>
                    <% end %>
                    <div class="dropdown-divider"></div>
                    <%= button_to admin_absence_path(absence[:id]), method: :delete, data: { confirm: '√ätes-vous s√ªr de vouloir supprimer cette absence ?' }, class: "dropdown-item dropdown-item-danger", form: { style: 'display: inline;' } do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                      <span>Supprimer</span>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <%= render 'shared/pagination' %>
</div>

<div class="divider"></div>

<!-- Add New Absence -->
<div class="glass-card">
  <h2 class="mb-4" style="font-size: 1.875rem;">D√©clarer une Nouvelle Absence</h2>
  <div class="alert alert-info mb-6">
    <strong>Information:</strong> D√©clarez les absences des agents (cong√©s, maladie, formation, etc.).
  </div>
  
  <div class="button-group">
    <%= link_to new_admin_absence_path, class: "btn-primary" do %>
      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      D√©clarer une nouvelle absence
    <% end %>
  </div>
</div>
