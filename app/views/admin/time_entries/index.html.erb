<% content_for :page_title, "Gestion des Pointages" %>

<!-- Page Header -->
<div class="glass-card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="gradient-heading">Gestion des Pointages</h1>
      <p class="text-large mt-2">Suivez et gérez tous les pointages des agents en temps réel</p>
    </div>
    <div class="button-group">
      <button type="button" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Exporter (CSV/Excel)
      </button>
    </div>
  </div>

<!-- Statistics Cards -->
  <div class="stats-grid">
  <div class="stat-card">
    <div class="stat-icon stat-icon-primary">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Total Pointages</p>
      <p class="stat-value"><%= @time_entries.length %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-success">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Complets</p>
      <p class="stat-value"><%= @time_entries.where(status: 'completed').count %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-info">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">En Cours</p>
      <p class="stat-value"><%= @time_entries.where(status: 'active').count %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-warning">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Anomalies</p>
      <p class="stat-value"><%= @time_entries.where(status: 'anomaly').count %></p>
    </div>
  </div>
</div>

  

<div class="divider"></div>

<!-- Filters Section -->
  <div class="alert alert-info mb-6">
    <strong>Filtres de Recherche:</strong> Utilisez les filtres ci-dessous pour affiner la liste des pointages
  </div>

  <form>
    <div class="form-grid form-grid-3">
      <div class="form-group">
        <label for="user_id">Agent</label>
        <select name="user_id" id="user_id">
          <option value="">Tous les agents</option>
          <% @users.each do |user| %>
            <option value="<%= user.id %>" <%= 'selected' if params[:user_id].to_i == user.id %>><%= user.full_name %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="site_id">Site</label>
        <select name="site_id" id="site_id">
          <option value="">Tous les sites</option>
          <% @sites.each do |site| %>
            <option value="<%= site.id %>" <%= 'selected' if params[:site_id].to_i == site.id %>><%= site.name %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="status">Statut</label>
        <select name="status" id="status">
          <option value="">Tous les statuts</option>
          <option value="completed" <%= 'selected' if params[:status] == 'completed' %>>Complet</option>
          <option value="active" <%= 'selected' if params[:status] == 'active' %>>En cours</option>
          <option value="anomaly" <%= 'selected' if params[:status] == 'anomaly' %>>Anomalie</option>
        </select>
      </div>
    </div>

    <div class="form-grid">
      <div class="form-group">
        <label for="start_date">Date de début</label>
        <input type="date" name="start_date" id="start_date" value="<%= params[:start_date] || '2025-11-04' %>">
      </div>

      <div class="form-group">
        <label for="end_date">Date de fin</label>
        <input type="date" name="end_date" id="end_date" value="<%= params[:end_date] || '2025-11-06' %>">
      </div>
    </div>

    <div class="button-group">
      <button type="submit" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
        </svg>
        Appliquer les filtres
      </button>
      <button type="reset" class="btn-secondary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Réinitialiser
      </button>
    </div>
  </form>
</div>

<div class="divider"></div>

<!-- Time Entries Table -->
<div class="card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h2 class="mb-2" style="font-size: 1.875rem;">Liste des Pointages</h2>
      <p class="text-large">Visualisez tous les pointages avec détails et statuts</p>
    </div>
    <div class="button-group">
      <%= link_to new_admin_time_entry_path, class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Créer un pointage
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Agent</th>
          <th>Site</th>
          <th>Arrivée</th>
          <th>Départ</th>
          <th>Durée</th>
          <th>IP Address</th>
          <th>Statut</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @time_entries.each do |entry| %>
          <tr>
            <td><strong>#<%= entry.id %></strong></td>
            <td>
              <div>
                <p class="font-semibold"><%= entry.user.full_name %></p>
                <p class="text-sm opacity-70"><%= entry.user.employee_number %></p>
              </div>
            </td>
            <td>
              <div>
                <p class="font-semibold"><%= entry.site.name %></p>
                <p class="text-sm opacity-70"><%= entry.site.code %></p>
              </div>
            </td>
            <td>
              <div>
                <p class="font-semibold"><%= entry.clocked_in_at.strftime('%d/%m/%Y') %></p>
                <p class="text-sm opacity-70"><%= entry.clocked_in_at.strftime('%H:%M') %></p>
              </div>
            </td>
            <td>
              <% if entry.clocked_out_at %>
                <div>
                  <p class="font-semibold"><%= entry.clocked_out_at.strftime('%d/%m/%Y') %></p>
                  <p class="text-sm opacity-70"><%= entry.clocked_out_at.strftime('%H:%M') %></p>
                </div>
              <% else %>
                <span class="text-warning">--</span>
              <% end %>
            </td>
            <td>
              <% if entry.duration_minutes %>
                <span class="badge-success"><%= "#{entry.duration_minutes / 60}h #{entry.duration_minutes % 60}m" %></span>
              <% else %>
                <span class="text-warning">En cours</span>
              <% end %>
            </td>
            <td>
              <span class="text-sm opacity-70"><%= entry.ip_address_in %></span>
            </td>
            <td>
              <% if entry.status == 'completed' %>
                <span class="badge-success">✓ Complet</span>
              <% elsif entry.status == 'active' %>
                <span class="badge">⏱ En cours</span>
              <% elsif entry.status == 'anomaly' %>
                <span class="badge-warning">⚠ Anomalie</span>
              <% end %>
              <% if entry.manually_corrected %>
                <span class="badge mt-1" style="display: block; font-size: 0.75rem;">Corrigé</span>
              <% end %>
            </td>
            <td>
              <div class="dropdown-wrapper" data-controller="dropdown">
                <button class="dropdown-trigger" data-action="click->dropdown#toggle" title="Actions">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                  </svg>
                </button>
                
                <div class="dropdown-menu hidden" data-dropdown-target="menu">
                  <%= link_to admin_time_entry_path(entry.id), class: "dropdown-item" do %>
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    <span>Voir</span>
                  <% end %>
                  <%= link_to edit_admin_time_entry_path(entry.id), class: "dropdown-item" do %>
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    <span>Modifier</span>
                  <% end %>
                  <div class="dropdown-divider"></div>
                  <%= button_to admin_time_entry_path(entry.id), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: "dropdown-item dropdown-item-danger", form: { style: 'display: inline;' } do %>
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                    <span>Supprimer</span>
                  <% end %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <%= render 'shared/pagination' %>
</div>

<div class="divider"></div>

<!-- Add New Time Entry -->
<div class="glass-card">
  <h2 class="mb-4" style="font-size: 1.875rem;">Ajouter un Nouveau Pointage</h2>
  <div class="alert alert-info mb-6">
    <strong>Information:</strong> Utilisez ce formulaire pour ajouter manuellement un pointage ou corriger une anomalie.
  </div>
  
  <div class="button-group">
    <%= link_to new_admin_time_entry_path, class: "btn-primary" do %>
      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Créer un nouveau pointage
    <% end %>
  </div>
</div>
