<% content_for :page_title, "Gestion des Pointages" %>

<!-- Page Header -->
<div class="glass-card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="gradient-heading">Gestion des Pointages</h1>
      <p class="text-large mt-2">Suivez et gérez tous les pointages des agents en temps réel</p>
    </div>
    <div class="button-group">
      <button type="button" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Exporter (CSV/Excel)
      </button>
    </div>
  </div>

  <!-- Filters Section -->
  <div class="alert alert-info mb-6">
    <strong>Filtres de Recherche:</strong> Utilisez les filtres ci-dessous pour affiner la liste des pointages
  </div>

  <form>
    <div class="form-grid form-grid-3">
      <div class="form-group">
        <label for="filter-agent">Agent</label>
        <select id="filter-agent">
          <option value="">Tous les agents</option>
          <% @sample_users.each do |user| %>
            <option value="<%= user[:id] %>"><%= "#{user[:first_name]} #{user[:last_name]}" %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="filter-site">Site</label>
        <select id="filter-site">
          <option value="">Tous les sites</option>
          <% @sample_sites.each do |site| %>
            <option value="<%= site[:id] %>"><%= site[:name] %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="filter-status">Statut</label>
        <select id="filter-status">
          <option value="">Tous les statuts</option>
          <option value="completed">Complet</option>
          <option value="active">En cours</option>
          <option value="anomaly">Anomalie</option>
        </select>
      </div>
    </div>

    <div class="form-grid">
      <div class="form-group">
        <label for="filter-start-date">Date de début</label>
        <input type="date" id="filter-start-date" value="2025-11-04">
      </div>

      <div class="form-group">
        <label for="filter-end-date">Date de fin</label>
        <input type="date" id="filter-end-date" value="2025-11-06">
      </div>
    </div>

    <div class="button-group">
      <button type="submit" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
        </svg>
        Appliquer les filtres
      </button>
      <button type="reset" class="btn-secondary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Réinitialiser
      </button>
    </div>
  </form>
</div>

<div class="divider"></div>

<!-- Statistics Cards -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-icon stat-icon-primary">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Total Pointages</p>
      <p class="stat-value"><%= @sample_time_entries.length %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-success">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Complets</p>
      <p class="stat-value"><%= @sample_time_entries.count { |e| e[:status] == 'completed' } %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-info">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">En Cours</p>
      <p class="stat-value"><%= @sample_time_entries.count { |e| e[:status] == 'active' } %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-warning">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Anomalies</p>
      <p class="stat-value"><%= @sample_time_entries.count { |e| e[:status] == 'anomaly' } %></p>
    </div>
  </div>
</div>

<div class="divider"></div>

<!-- Time Entries Table -->
<div class="card">
  <h2 class="mb-4">Liste des Pointages</h2>
  <p class="text-large mb-6">Visualisez tous les pointages avec détails et statuts</p>

  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Agent</th>
          <th>Site</th>
          <th>Arrivée</th>
          <th>Départ</th>
          <th>Durée</th>
          <th>IP Address</th>
          <th>Statut</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @sample_time_entries.each do |entry| %>
          <tr>
            <td><strong>#<%= entry[:id] %></strong></td>
            <td>
              <div>
                <p class="font-semibold"><%= "#{entry[:user][:first_name]} #{entry[:user][:last_name]}" %></p>
                <p class="text-sm opacity-70"><%= entry[:user][:employee_number] %></p>
              </div>
            </td>
            <td>
              <div>
                <p class="font-semibold"><%= entry[:site][:name] %></p>
                <p class="text-sm opacity-70"><%= entry[:site][:code] %></p>
              </div>
            </td>
            <td>
              <div>
                <p class="font-semibold"><%= entry[:clocked_in_at].strftime('%d/%m/%Y') %></p>
                <p class="text-sm opacity-70"><%= entry[:clocked_in_at].strftime('%H:%M') %></p>
              </div>
            </td>
            <td>
              <% if entry[:clocked_out_at] %>
                <div>
                  <p class="font-semibold"><%= entry[:clocked_out_at].strftime('%d/%m/%Y') %></p>
                  <p class="text-sm opacity-70"><%= entry[:clocked_out_at].strftime('%H:%M') %></p>
                </div>
              <% else %>
                <span class="text-warning">--</span>
              <% end %>
            </td>
            <td>
              <% if entry[:duration_minutes] %>
                <span class="badge-success"><%= "#{entry[:duration_minutes] / 60}h #{entry[:duration_minutes] % 60}m" %></span>
              <% else %>
                <span class="text-warning">En cours</span>
              <% end %>
            </td>
            <td>
              <span class="text-sm opacity-70"><%= entry[:ip_address_in] %></span>
            </td>
            <td>
              <% if entry[:status] == 'completed' %>
                <span class="badge-success">✓ Complet</span>
              <% elsif entry[:status] == 'active' %>
                <span class="badge">⏱ En cours</span>
              <% elsif entry[:status] == 'anomaly' %>
                <span class="badge-warning">⚠ Anomalie</span>
              <% end %>
              <% if entry[:manually_corrected] %>
                <span class="badge mt-1" style="display: block; font-size: 0.75rem;">Corrigé</span>
              <% end %>
            </td>
            <td>
              <div class="table-actions">
                <button class="btn-icon-only btn-view" title="Voir les détails">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  <span>Voir</span>
                </button>
                <button class="btn-icon-only btn-edit" title="Modifier">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <span>Modifier</span>
                </button>
                <% if entry[:status] == 'anomaly' %>
                  <button class="btn-icon-only btn-download" title="Corriger">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>Corriger</span>
                  </button>
                <% end %>
                <button class="btn-icon-only btn-delete" title="Supprimer">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <span>Supprimer</span>
                </button>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="divider"></div>

<!-- Manual Correction Form -->
<div class="glass-card">
  <h2 class="mb-4">Correction Manuelle de Pointage</h2>
  <div class="alert alert-info mb-6">
    <strong>Information:</strong> Cette option est réservée aux administrateurs pour corriger les anomalies ou ajouter des pointages manuellement.
  </div>

  <form>
    <div class="form-grid">
      <div class="form-group">
        <label for="manual-agent">Sélectionner un agent</label>
        <select id="manual-agent" required>
          <option value="">-- Choisir un agent --</option>
          <% @sample_users.each do |user| %>
            <option value="<%= user[:id] %>"><%= "#{user[:first_name]} #{user[:last_name]} (#{user[:employee_number]})" %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="manual-site">Site</label>
        <select id="manual-site" required>
          <option value="">-- Choisir un site --</option>
          <% @sample_sites.each do |site| %>
            <option value="<%= site[:id] %>"><%= "#{site[:name]} (#{site[:code]})" %></option>
          <% end %>
        </select>
      </div>
    </div>

    <div class="form-grid">
      <div class="form-group">
        <label for="manual-checkin-date">Date d'arrivée</label>
        <input type="date" id="manual-checkin-date" required>
      </div>

      <div class="form-group">
        <label for="manual-checkin-time">Heure d'arrivée</label>
        <input type="time" id="manual-checkin-time" required>
      </div>
    </div>

    <div class="form-grid">
      <div class="form-group">
        <label for="manual-checkout-date">Date de départ</label>
        <input type="date" id="manual-checkout-date">
      </div>

      <div class="form-group">
        <label for="manual-checkout-time">Heure de départ</label>
        <input type="time" id="manual-checkout-time">
      </div>
    </div>

    <div class="form-group">
      <label for="manual-notes">Notes / Raison de la correction</label>
      <textarea id="manual-notes" placeholder="Expliquer la raison de cette correction manuelle..." rows="4"></textarea>
    </div>

    <div class="alert alert-success">
      <strong>Note:</strong> Cette action sera enregistrée dans l'historique avec votre identifiant administrateur et sera marquée comme "Corrigé manuellement".
    </div>

    <div class="button-group mt-6">
      <button type="submit" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Enregistrer la correction
      </button>
      <button type="reset" class="btn-secondary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
        Annuler
      </button>
    </div>
  </form>
</div>
