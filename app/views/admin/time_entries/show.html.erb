<% content_for :page_title, "Détails du Pointage ##{@time_entry[:id]}" %>

<!-- Page Header -->
<div class="glass-card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="gradient-heading">Pointage #<%= @time_entry[:id] %></h1>
      <p class="text-large mt-2">Détails complets du pointage</p>
    </div>
    <div class="button-group">
      <%= link_to admin_time_entries_path, class: "btn-secondary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Retour à la liste
      <% end %>
      <%= link_to edit_admin_time_entry_path(@time_entry[:id]), class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Modifier
      <% end %>
    </div>
  </div>
</div>

<div class="divider"></div>

<!-- Status Badge -->
<div class="card mb-6">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="mb-2">Statut du Pointage</h2>
    </div>
    <div>
      <% if @time_entry[:status] == 'completed' %>
        <span class="badge-success" style="font-size: 1.1rem; padding: 0.75rem 1.5rem;">✓ Complet</span>
      <% elsif @time_entry[:status] == 'active' %>
        <span class="badge" style="font-size: 1.1rem; padding: 0.75rem 1.5rem;">⏱ En cours</span>
      <% elsif @time_entry[:status] == 'anomaly' %>
        <span class="badge-warning" style="font-size: 1.1rem; padding: 0.75rem 1.5rem;">⚠ Anomalie</span>
      <% end %>
    </div>
  </div>
</div>

<!-- Main Information -->
<div class="form-grid">
  <!-- Agent Information -->
  <div class="card">
    <h2 class="mb-4">
      <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      Informations Agent
    </h2>
    <div class="space-y-3">
      <div>
        <p class="text-sm opacity-70">Nom complet</p>
        <p class="font-semibold text-lg"><%= "#{@time_entry[:user][:first_name]} #{@time_entry[:user][:last_name]}" %></p>
      </div>
      <div>
        <p class="text-sm opacity-70">Numéro d'employé</p>
        <p class="font-semibold"><%= @time_entry[:user][:employee_number] || 'N/A' %></p>
      </div>
      <div>
        <p class="text-sm opacity-70">Email</p>
        <p class="font-semibold"><%= @time_entry[:user][:email] %></p>
      </div>
    </div>
  </div>

  <!-- Site Information -->
  <div class="card">
    <h2 class="mb-4">
      <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      Informations Site
    </h2>
    <div class="space-y-3">
      <div>
        <p class="text-sm opacity-70">Nom du site</p>
        <p class="font-semibold text-lg"><%= @time_entry[:site][:name] %></p>
      </div>
      <div>
        <p class="text-sm opacity-70">Code du site</p>
        <p class="font-semibold"><%= @time_entry[:site][:code] %></p>
      </div>
      <% if @time_entry[:site][:address].present? %>
        <div>
          <p class="text-sm opacity-70">Adresse</p>
          <p class="font-semibold"><%= @time_entry[:site][:address] %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="divider"></div>

<!-- Time Information -->
<div class="card">
  <h2 class="mb-4">
    <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
    Horaires de Pointage
  </h2>
  
  <div class="form-grid form-grid-3">
    <div>
      <p class="text-sm opacity-70 mb-2">Heure d'arrivée</p>
      <div class="alert alert-info">
        <strong><%= @time_entry[:clocked_in_at].strftime('%d/%m/%Y') %></strong>
        <br>
        <span style="font-size: 1.5rem;"><%= @time_entry[:clocked_in_at].strftime('%H:%M') %></span>
      </div>
    </div>
    
    <div>
      <p class="text-sm opacity-70 mb-2">Heure de départ</p>
      <% if @time_entry[:clocked_out_at] %>
        <div class="alert alert-success">
          <strong><%= @time_entry[:clocked_out_at].strftime('%d/%m/%Y') %></strong>
          <br>
          <span style="font-size: 1.5rem;"><%= @time_entry[:clocked_out_at].strftime('%H:%M') %></span>
        </div>
      <% else %>
        <div class="alert alert-warning">
          <strong>Pas encore pointé</strong>
        </div>
      <% end %>
    </div>
    
    <div>
      <p class="text-sm opacity-70 mb-2">Durée totale</p>
      <% if @time_entry[:duration_minutes] %>
        <div class="alert alert-success">
          <span style="font-size: 1.5rem;">
            <%= @time_entry[:duration_minutes] / 60 %>h <%= @time_entry[:duration_minutes] % 60 %>m
          </span>
          <br>
          <small>(<%= @time_entry[:duration_minutes] %> minutes)</small>
        </div>
      <% else %>
        <div class="alert alert-warning">
          <strong>En cours...</strong>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="divider"></div>

<!-- Technical Information -->
<div class="card">
  <h2 class="mb-4">
    <svg class="inline-block w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
    Informations Techniques
  </h2>
  
  <div class="form-grid">
    <div>
      <p class="text-sm opacity-70">IP d'arrivée</p>
      <p class="font-semibold"><%= @time_entry[:ip_address_in] || 'N/A' %></p>
    </div>
    
    <div>
      <p class="text-sm opacity-70">IP de départ</p>
      <p class="font-semibold"><%= @time_entry[:ip_address_out] || 'N/A' %></p>
    </div>
  </div>
  
  <% if @time_entry[:user_agent_in].present? %>
    <div class="mt-4">
      <p class="text-sm opacity-70">User Agent (arrivée)</p>
      <p class="font-mono text-sm bg-gray-100 p-2 rounded"><%= @time_entry[:user_agent_in] %></p>
    </div>
  <% end %>
  
  <% if @time_entry[:user_agent_out].present? %>
    <div class="mt-4">
      <p class="text-sm opacity-70">User Agent (départ)</p>
      <p class="font-mono text-sm bg-gray-100 p-2 rounded"><%= @time_entry[:user_agent_out] %></p>
    </div>
  <% end %>
</div>

<!-- Correction Information -->
<% if @time_entry[:manually_corrected] %>
  <div class="divider"></div>
  
  <div class="alert alert-warning">
    <h3 class="font-bold mb-2">
      <svg class="inline-block w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      Ce pointage a été corrigé manuellement
    </h3>
    
    <div class="mt-4 space-y-2">
      <% if @time_entry[:corrected_by] %>
        <div>
          <p class="text-sm opacity-70">Corrigé par</p>
          <p class="font-semibold"><%= "#{@time_entry[:corrected_by][:first_name]} #{@time_entry[:corrected_by][:last_name]}" %></p>
        </div>
      <% end %>
      
      <% if @time_entry[:corrected_at] %>
        <div>
          <p class="text-sm opacity-70">Date de correction</p>
          <p class="font-semibold"><%= @time_entry[:corrected_at].strftime('%d/%m/%Y à %H:%M') %></p>
        </div>
      <% end %>
      
      <% if @time_entry[:notes].present? %>
        <div>
          <p class="text-sm opacity-70">Notes de correction</p>
          <div class="mt-2 bg-white p-3 rounded">
            <%= simple_format(@time_entry[:notes]) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="divider"></div>

<!-- Actions -->
<div class="card">
  <div class="button-group">
    <%= link_to edit_admin_time_entry_path(@time_entry[:id]), class: "btn-primary" do %>
      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Modifier ce pointage
    <% end %>
    
    <%= link_to admin_time_entries_path, class: "btn-secondary" do %>
      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Retour à la liste
    <% end %>
    
    <%= button_to admin_time_entry_path(@time_entry[:id]), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce pointage ?' }, class: "btn-danger" do %>
      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      Supprimer
    <% end %>
  </div>
</div>
