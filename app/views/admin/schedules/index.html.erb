<% content_for :page_title, "Gestion des Horaires" %>

<!-- Page Header -->
<div class="glass-card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="gradient-heading">Gestion des Horaires</h1>
      <p class="text-large mt-2">Planifiez et g√©rez les affectations des agents</p>
    </div>
    <div class="button-group">
      <%= link_to new_admin_schedule_path, class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Cr√©er un horaire
      <% end %>
    </div>
  </div>

<!-- Statistics Cards -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-icon stat-icon-primary">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Total Horaires</p>
      <p class="stat-value"><%= @all_schedules.length %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-info">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Planifi√©s</p>
      <p class="stat-value"><%= @all_schedules.count { |s| s[:status] == 'scheduled' } %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-success">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Compl√©t√©s</p>
      <p class="stat-value"><%= @all_schedules.count { |s| s[:status] == 'completed' } %></p>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon stat-icon-warning">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
    </div>
    <div class="stat-content">
      <p class="stat-label">Manqu√©s</p>
      <p class="stat-value"><%= @all_schedules.count { |s| s[:status] == 'missed' } %></p>
    </div>
  </div>
</div>

<div class="divider"></div>
  <!-- Filters Section -->
  <div class="alert alert-info mb-6">
    <strong>Filtres de Recherche:</strong> Utilisez les filtres ci-dessous pour affiner la liste des horaires
  </div>

  <form>
    <div class="form-grid">
      <div class="form-group">
        <label for="search">Rechercher</label>
        <input 
          type="text" 
          name="search" 
          id="search" 
          placeholder="Agent, site, notes..."
          value="<%= params[:search] %>">
      </div>

      <div class="form-group">
        <label for="status">Statut</label>
        <select name="status" id="status">
          <option value="">Tous les statuts</option>
          <option value="scheduled" <%= 'selected' if params[:status] == 'scheduled' %>>Planifi√©s</option>
          <option value="completed" <%= 'selected' if params[:status] == 'completed' %>>Compl√©t√©s</option>
          <option value="missed" <%= 'selected' if params[:status] == 'missed' %>>Manqu√©s</option>
          <option value="cancelled" <%= 'selected' if params[:status] == 'cancelled' %>>Annul√©s</option>
        </select>
      </div>

      <div class="form-group">
        <label for="site_id">Site</label>
        <select name="site_id" id="site_id">
          <option value="">Tous les sites</option>
          <% @demo_sites.each do |site| %>
            <option value="<%= site[:id] %>" <%= 'selected' if params[:site_id] == site[:id].to_s %>><%= site[:name] %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="user_id">Agent</label>
        <select name="user_id" id="user_id">
          <option value="">Tous les agents</option>
          <% @demo_users.each do |user| %>
            <option value="<%= user[:id] %>" <%= 'selected' if params[:user_id] == user[:id].to_s %>><%= user[:name] %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="start_date">Date de d√©but</label>
        <input 
          type="date" 
          name="start_date" 
          id="start_date" 
          value="<%= params[:start_date] %>">
      </div>

      <div class="form-group">
        <label for="end_date">Date de fin</label>
        <input 
          type="date" 
          name="end_date" 
          id="end_date" 
          value="<%= params[:end_date] %>">
      </div>
    </div>

    <div class="button-group">
      <button type="submit" class="btn-primary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
        </svg>
        Appliquer les filtres
      </button>
      <a href="<%= admin_schedules_path %>" class="btn-secondary">
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        R√©initialiser
      </a>
    </div>
  </form>
</div>


<div class="divider"></div>

<!-- Schedules Table -->
<div class="card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h2 class="mb-2" style="font-size: 1.875rem;">Liste des Horaires</h2>
      <p class="text-large">Visualisez tous les horaires planifi√©s avec leurs d√©tails</p>
    </div>
    <div class="button-group">
      <%= link_to new_admin_schedule_path, class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Cr√©er un horaire
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Date</th>
          <th>Agent</th>
          <th>Site</th>
          <th>Horaires</th>
          <th>Statut</th>
          <th>Remplacement</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @schedules.empty? %>
          <tr>
            <td colspan="8" style="text-align: center; padding: 2rem;">
              <div class="alert alert-warning" style="display: inline-block;">
                <strong>Aucun horaire trouv√©</strong> avec les filtres actuels
              </div>
            </td>
          </tr>
        <% else %>
          <% @schedules.each do |schedule| %>
            <tr>
              <td><strong>#<%= schedule[:id] %></strong></td>
              <td>
                <div>
                  <p class="font-semibold"><%= schedule[:scheduled_date].strftime('%d/%m/%Y') %></p>
                  <p class="text-sm opacity-70"><%= l(schedule[:scheduled_date], format: '%A') %></p>
                </div>
              </td>
              <td>
                <div>
                  <p class="font-semibold"><%= schedule[:user_name] %></p>
                  <p class="text-sm opacity-70"><%= schedule[:employee_number] %></p>
                </div>
              </td>
              <td>
                <div>
                  <p class="font-semibold"><%= schedule[:site_name] %></p>
                  <span class="badge"><%= schedule[:site_code] %></span>
                </div>
              </td>
              <td>
                <div>
                  <p class="font-semibold"><%= schedule[:start_time] %> - <%= schedule[:end_time] %></p>
                  <% 
                    start_parts = schedule[:start_time].split(':')
                    end_parts = schedule[:end_time].split(':')
                    duration = (end_parts[0].to_i - start_parts[0].to_i) + ((end_parts[1].to_i - start_parts[1].to_i) / 60.0)
                  %>
                  <p class="text-sm opacity-70"><%= '%.1f' % duration %> heures</p>
                </div>
              </td>
              <td>
                <% if schedule[:status] == 'scheduled' %>
                  <span class="badge-info">üìÖ Planifi√©</span>
                <% elsif schedule[:status] == 'completed' %>
                  <span class="badge-success">‚úì Compl√©t√©</span>
                <% elsif schedule[:status] == 'missed' %>
                  <span class="badge-warning">‚ö† Manqu√©</span>
                <% elsif schedule[:status] == 'cancelled' %>
                  <span class="badge-danger">‚úó Annul√©</span>
                <% end %>
              </td>
              <td>
                <% if schedule[:replaced_by_id] %>
                  <div>
                    <p class="text-sm font-semibold text-orange-600">üîÑ Remplac√©</p>
                    <p class="text-sm opacity-70"><%= schedule[:replaced_by_name] %></p>
                  </div>
                <% else %>
                  <span class="text-sm opacity-50">‚Äî</span>
                <% end %>
              </td>
              <td>
                <div class="dropdown-wrapper" data-controller="dropdown">
                  <button class="dropdown-trigger" data-action="click->dropdown#toggle" title="Actions">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                    </svg>
                  </button>
                  
                  <div class="dropdown-menu hidden" data-dropdown-target="menu">
                    <%= link_to admin_schedule_path(schedule[:id]), class: "dropdown-item" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      <span>Voir</span>
                    <% end %>
                    <%= link_to edit_admin_schedule_path(schedule[:id]), class: "dropdown-item" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                      <span>Modifier</span>
                    <% end %>
                    <div class="dropdown-divider"></div>
                    <%= button_to admin_schedule_path(schedule[:id]), method: :delete, data: { confirm: '√ätes-vous s√ªr de vouloir annuler cet horaire ?' }, class: "dropdown-item dropdown-item-danger", form: { style: 'display: inline;' } do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                      </svg>
                      <span>Annuler</span>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <%= render 'shared/pagination' %>
</div>

<div class="divider"></div>

<!-- Add New Schedule -->
<div class="glass-card">
  <h2 class="mb-4" style="font-size: 1.875rem;">Planifier un Nouveau Horaire</h2>
  <div class="alert alert-info mb-6">
    <strong>Information:</strong> Cr√©ez des horaires pour affecter des agents √† des sites avec des plages horaires sp√©cifiques.
  </div>
  
  <div class="button-group">
    <%= link_to new_admin_schedule_path, class: "btn-primary" do %>
      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Cr√©er un nouvel horaire
    <% end %>
  </div>
</div>
