<% content_for :page_title, "Gestion des Horaires" %>

<!-- Page Header -->
<div class="glass-card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="gradient-heading">Gestion des Horaires</h1>
      <p class="text-large mt-2">Planifiez et g√©rez les affectations des agents</p>
    </div>
    <div class="button-group">
      <%= link_to new_admin_schedule_path, class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Cr√©er un horaire
      <% end %>
    </div>
  </div>

<%= render 'shared/schedules/statistics_cards', total_label: 'Total Horaires' %>

<div class="divider"></div>
  <%= render 'shared/schedules/filters', 
             label_type: 'horaires',
             search_placeholder: 'Agent, site, notes...',
             reset_path: admin_schedules_path %>
</div>


<div class="divider"></div>

<!-- Schedules Table -->
<div class="card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h2 class="mb-2" style="font-size: 1.875rem;">Liste des Horaires</h2>
      <p class="text-large">Visualisez tous les horaires planifi√©s avec leurs d√©tails</p>
    </div>
    <div class="button-group">
      <%= link_to new_admin_schedule_path, class: "btn-primary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Cr√©er un horaire
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Date</th>
          <th>Agent</th>
          <th>Site</th>
          <th>Horaires</th>
          <th>Statut</th>
          <th>Remplacement</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @schedules.empty? %>
          <tr>
            <td colspan="8" style="text-align: center; padding: 2rem;">
              <div class="alert alert-warning" style="display: inline-block;">
                <strong>Aucun horaire trouv√©</strong> avec les filtres actuels
              </div>
            </td>
          </tr>
        <% else %>
          <% @schedules.each do |schedule| %>
            <tr>
              <td><strong>#<%= schedule[:id] %></strong></td>
              <td>
                <div>
                  <p class="font-semibold"><%= schedule[:scheduled_date].strftime('%d/%m/%Y') %></p>
                  <p class="text-sm opacity-70"><%= l(schedule[:scheduled_date], format: '%A') %></p>
                </div>
              </td>
              <td>
                <div>
                  <p class="font-semibold"><%= schedule[:user_name] %></p>
                  <p class="text-sm opacity-70"><%= schedule[:employee_number] %></p>
                </div>
              </td>
              <td>
                <div>
                  <p class="font-semibold"><%= schedule[:site_name] %></p>
                  <span class="badge"><%= schedule[:site_code] %></span>
                </div>
              </td>
              <td>
                <div>
                  <p class="font-semibold"><%= schedule[:start_time] %> - <%= schedule[:end_time] %></p>
                  <% 
                    start_parts = schedule[:start_time].split(':')
                    end_parts = schedule[:end_time].split(':')
                    duration = (end_parts[0].to_i - start_parts[0].to_i) + ((end_parts[1].to_i - start_parts[1].to_i) / 60.0)
                  %>
                  <p class="text-sm opacity-70"><%= '%.1f' % duration %> heures</p>
                </div>
              </td>
              <td>
                <%= render 'shared/schedules/status_badge', status: schedule[:status], namespace: 'admin' %>
              </td>
              <td>
                <% if schedule[:replaced_by_id] %>
                  <div>
                    <p class="text-sm font-semibold text-orange-600">üîÑ Remplac√©</p>
                    <p class="text-sm opacity-70"><%= schedule[:replaced_by_name] %></p>
                  </div>
                <% else %>
                  <span class="text-sm opacity-50">‚Äî</span>
                <% end %>
              </td>
              <td>
                <div class="dropdown-wrapper" data-controller="dropdown">
                  <button class="dropdown-trigger" data-action="click->dropdown#toggle" title="Actions">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                    </svg>
                  </button>
                  
                  <div class="dropdown-menu hidden" data-dropdown-target="menu">
                    <%= link_to admin_schedule_path(schedule[:id]), class: "dropdown-item" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      <span>Voir</span>
                    <% end %>
                    <%= link_to edit_admin_schedule_path(schedule[:id]), class: "dropdown-item" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                      <span>Modifier</span>
                    <% end %>
                    <div class="dropdown-divider"></div>
                    <%= button_to admin_schedule_path(schedule[:id]), method: :delete, data: { confirm: '√ätes-vous s√ªr de vouloir annuler cet horaire ?' }, class: "dropdown-item dropdown-item-danger", form: { style: 'display: inline;' } do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                      </svg>
                      <span>Annuler</span>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <%= render 'shared/pagination' %>
</div>

<div class="divider"></div>

<!-- Add New Schedule -->
<div class="glass-card">
  <h2 class="mb-4" style="font-size: 1.875rem;">Planifier un Nouveau Horaire</h2>
  <div class="alert alert-info mb-6">
    <strong>Information:</strong> Cr√©ez des horaires pour affecter des agents √† des sites avec des plages horaires sp√©cifiques.
  </div>
  
  <div class="button-group">
    <%= link_to new_admin_schedule_path, class: "btn-primary" do %>
      <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Cr√©er un nouvel horaire
    <% end %>
  </div>
</div>
